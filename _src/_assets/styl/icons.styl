svg
    &.icon
        height: 20px
        width: 20px
        display: inline-block
        fill: $text-color-light
        vertical-align: baseline
        transition: all .2s ease-in-out

        .btn &
            height: 18px
            width: 18px
            margin: 4px 4px -3px 4px

    // Fix jQuery bug: http://bugs.jquery.com/ticket/11352
    use
        pointer-events: none

