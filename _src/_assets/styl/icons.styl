svg
    &.icon
        height: 24px
        width: 24px
        display: inline-block
        fill: currentColor
        vertical-align: baseline

        .btn &
            height: 18px
            width: 18px
            margin: 4px -4px 0 4px
            filter: drop-shadow( 0 1px #eee )
            float: right

    // Fix jQuery bug: http://bugs.jquery.com/ticket/11352
    use
        pointer-events: none
