.page-about
    .entry-title
        @extend .visuallyhidden

    .entry-content
        @extend .textcenter

    .footer
        .avatar,
        .footer-description
            @extend .hide

        .subscribe-title
            margin-top: 0

    @media only screen and (min-width: 40.625em) and (min-height: 650px)
        .document
            margin-bottom: 350px

        .footer
            height: 350px

.intro-1,
.intro-2
    @extend .divider-bottom
    color: $text-color-light

    @media $breakpoint2
        max-width: 60%
        margin-left: auto
        margin-right: auto

.intro-1
    @extend .h3

.intro-2
    font-size: $font-size-large
