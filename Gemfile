# A sample Gemfile
source "https://rubygems.org"

group :jekyll do
    gem 'jekyll'
    gem 'jekyll-sitemap'
    gem 'jekyll-redirect-from'
    gem 'jekyll-picture-tag', :git => 'git://github.com/kremalicious/jekyll-picture-tag.git', :branch => 'jekyll3'
    #gem 'jekyll-archives'
    gem 'jekyll-paginate'
end

group :development do
    gem 'redcarpet'
    gem 'mini_magick'
end

group :lsi do
    gem 'gsl'
    gem 'rb-gsl'
    gem 'narray'
    gem 'classifier-reborn'
end
